<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Move Citizen: {{citizen.first_name}} {{citizen.last_name}}</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/citizens">Home</a>
            </li>
            <li class="active">
                <strong>Move Citizen</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">

    <div class="ibox float-e-margins" id="move-citizen-view">
        <div class="ibox-title">
            <h5>Move citizen - New address</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            {{#if message}}
                <div class='alert alert-success'>{{message}}</div>
            {{/if}}

            <form method="POST" action="/api/move-citizen" class="form-horizontal">
                <div class='row'>
                    <div class='col-md-12'>
                        <div class="form-group">
                            <input type='hidden' name="citizen_id" value={{citizen.citizen_id}}>
                            <label class="col-sm-2 control-label">Province*</label>
                            <div class="col-sm-10">
                                <select id="selectProvince" name='province' class='form-control' onChange="pullDistricts();" required>
                                    <option>---select---</option>
                                    {{#each provinces as |province|}}
                                      <option value={{province.province_id}}>{{province.province_name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">District*</label>
                            <div class="col-sm-10">
                                <select id="selectDistrict" name='district' class='form-control' onChange="pullImirenge()" required >
                                    <option value=''>-- select --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Umurenge*</label>
                            <div class="col-sm-10">
                                <select id="selectUmurenge" name='umurenge' class='form-control' required>
                                    <option value=''>-- select --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Akagari*</label>
                            <div class="col-sm-10">
                                <select id="selectAkagari" name='akagari' class='form-control' onChange="pullUtugari()" required>
                                    <option value='1'>Anonymous</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Cell / Umudugudu*</label>
                            <div class="col-sm-10">
                                <input name='umudugudu' type='text' placeholder='Umudugudu' class='form-control' required>
                            </div>
                        </div>

                        <div class='form-group'>
                            <button class='btn btn-primary col-sm-offset-2'> Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

