<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>New citizen</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">Home</a>
            </li>
            <li class="active">
                <strong>New citizens</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><i class='fa fa-user'></i> Personal information <small>All fields with (*) are required.</small></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                	<div class='alert alert-success alert-dismissible col-sm-offset-2'>Your information status will be here</div>
                    <form method="get" class="form-horizontal">
                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                	<label class="col-sm-2 control-label">First name*</label>
                                    <div class="col-sm-10">
                                    	<input type="text" class="form-control" placeholder='First name'>
                                    </div>
                                </div>
                                <div class="form-group">
                                	<label class="col-sm-2 control-label">Last name* </label>
                                    <div class="col-sm-10">
                                    	<input type="text" class="form-control" placeholder='Last name'> 
                                    </div>
                                </div>
                                <div class="form-group">
                                	<label class="col-sm-2 control-label">National ID* </label>
                                    <div class="col-sm-10">
                                    	<input type="password" class="form-control" name="password" placeholder='National Identification Number'>
                                    </div>
                                </div>

                                <div class="form-group">
                                	<label class="col-sm-2 control-label">Date of Birth* </label>
                                    <div class="col-sm-10">
                                    	<input type="date" class="form-control" placeholder='yyy-mm-dd'>
                                    </div>
                                </div>
                                <div class="form-group">
                                	<label class="col-sm-2 control-label">Place of birth* </label>
                                    <div class="col-sm-10">
                                    	<input type="password" class="form-control" name="password" placeholder='National Identification Number'>
                                    	<span class="help-block m-b-none">Province and District</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                	<label class="col-sm-2 control-label">Phone number* </label>
                                    <div class="col-sm-10">
                                    	<input type="text" placeholder="placeholder" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                	<label class="col-sm-2 control-label">Email</label>
                                    <div class="col-sm-10">
                                    	<input type="text" placeholder="placeholder" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class='row'>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                            	<label class="col-sm-2 control-label">Country</label>
                                <div class="col-sm-10">
                                	<input disabled type="text" value='Rwanda' class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                            	<label class="col-sm-2 control-label">Province*</label>
                                <div class="col-sm-10">
                                	<select name='province' class='form-control' disabled>
                                		<option value=''>Kigali City</option>
                                		<option value='' disabled>North Province</option>
                                		<option value=''disabled>South Province</option>
                                		<option value=''disabled>Eastern Province</option>
                                		<option value=''disabled>Western Province</option>
                                	</select>
                                </div>
                            </div>
                            <div class="form-group">
                            	<label class="col-sm-2 control-label">District*</label>
                                <div class="col-sm-10">
                                	<select name='province' class='form-control'>
                                		<option value=''>-- select --</option>
                                	</select>
                                </div>
                            </div>
                            <div class="form-group">
                            	<label class="col-sm-2 control-label">Umurenge*</label>
                                <div class="col-sm-10">
                                	<select name='province' class='form-control'>
                                		<option value=''>-- select --</option>
                                	</select>
                                </div>
                            </div>
                            <div class="form-group">
                            	<label class="col-sm-2 control-label">Akagari*</label>
                                <div class="col-sm-10">
                                	<select name='province' class='form-control'>
                                		<option value=''>-- select --</option>
                                	</select>
                                </div>
                            </div>
                            <div class="form-group">
                            	<label class="col-sm-2 control-label">Cell / Umudugudu*</label>
                                <div class="col-sm-10">
                                	<input name='umudugudu' type='text' placeholder='Umudugudu' class='form-control'>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Photo*</label>
                                <div class="col-sm-10">
                                    <input name='photo' type='file' class='form-control'>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <h5><i class='fa fa-pied-piper-alt'></i> Parents information</h5>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Father's full name</label>
                                <div class="col-sm-10">
                                    <input type="text" placeholder="Full name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Mother's full name</label>
                                <div class="col-sm-10">
                                    <input type="text" placeholder="Full name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Current Residence</label>
                                <div class="col-sm-10">
                                    <input type="text" placeholder="Full address" class="form-control">
                                    <span class="help-block m-b-none">Province, District, Umurenge, Akagari, Umudugudu</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Contact phone number</label>
                                <div class="col-sm-10">
                                    <input type="text" placeholder="07xxxxxxxxxx" class="form-control">
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Employer's full name</label>
                                <div class="col-sm-10">
                                    <input type="text" placeholder="Full name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">National ID</label>
                                <div class="col-sm-10">
                                    <input type="number" placeholder="National ID" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Phone number</label>
                                <div class="col-sm-10">
                                    <input type="text" placeholder="07xxxxxxxx" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Current residence</label>
                                <div class="col-sm-10">
                                    <input type="text" placeholder="Full address" class="form-control">
                                    <span class="help-block m-b-none">Province, District, Umurenge, Akagari, Umudugudu</span>
                                </div>
                            </div>
                             <div class="hr-line-dashed"></div>
                            <div class='col-sm-offset-2'>
                                <button class='btn btn-primary'>Save</button>
                            </div>
                        </div>  
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>